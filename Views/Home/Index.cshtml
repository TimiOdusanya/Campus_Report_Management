@model ReportManagement.Models.ViewModels.HomeVM

<body id="top">
    <!-- Banner -->
    <section id="banner">
        <div class="inner">
            <h2>CAMPUS FIX</h2>
            <p>A web app to fix <a href="http://templated.co">CAMPUS ISSUES</a></p>
            <ul class="actions">
                <li><a id="register" asp-area="Identity" asp-page="/Account/Register" class="button big special">Sign Up</a></li>
                <li><a href="#two" class="button big alt">Learn More</a></li>
            </ul>
        </div>
    </section>

    <!-- One -->
    <section id="one" class="wrapper style1">
        <header class="major">
            <h2>Report issues, safety concerns and more.</h2>
            <p>Fast and easy solution to your complaints</p>
        </header>
        <div class="container">
            <div class="row">
                <div class="4u">
                    <section class="special box">
                        <i class="icon fa-area-chart major"></i>
